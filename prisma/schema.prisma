generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Anouncement {
  id           Int      @id @default(autoincrement())
  title        String //@db.VarChar(50)
  year         Int
  km           Int
  price        Float
  description  String
  vehicle_type String
  ad_type      String
  published    Boolean
  sold         Boolean
  cover_img    String
  created      DateTime @updatedAt

  @@map("Anouncement")
}
